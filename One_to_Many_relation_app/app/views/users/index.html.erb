<h1>Users</h1>
<table>
  <tr>
    <th>Name</th>
 </tr>
<% @user.each do |u| %>
  <tr>
  <td><%= u.name %></td>
  <td><%= link_to 'Show', u %></td>
    <td><%= link_to 'Edit', edit_user_path(u) %></td>
    <td><%= link_to 'Destroy', u, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'New User', new_user_path %>
